{
  "name": "wordpress/sqe-project",
  "description": "WordPress CI/CD Quality Engineering Project",
  "type": "project",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "wp-phpunit/wp-phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "platform": {
      "php": "7.4"
    }
  }
}

